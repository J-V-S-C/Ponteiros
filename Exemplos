Ex-1
#include <stdio.h>
#include <conio.h>

main()
{


int vet[5]={1, 2, 3, 4, 5};

int *p=vet;
int i;

for(i=0; i<5; i++)

printf("%d\n", p[i]);

return 0;


}

Ex2-
#include <stdio.h>
#include <conio.h>

main()
{


int vet[5]={1, 2, 3, 4, 5};

int *p=vet;
int i;

for(i=0; i<5; i++)

printf("%d\n", *(p+i));

return 0
;

}





















ex3-

#include <stdio.h>
#include <conio.h>

main()
{


float matrix[50][50];
float *p;

int count;

p=matrix[0];


for(count=0; count<2500; count++)
{
*p=0.0;
p++;

}


}
